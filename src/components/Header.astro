---
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
	<nav class="site-nav">
		<div class="site-brand">
			<a href="/" class="site-title">Rutina Full Body</a>
			<span class="site-tagline">Entrena en casa con estructura</span>
		</div>
		<div class="site-links">
			<HeaderLink href="/">Rutina</HeaderLink>
			<HeaderLink href="/#calentamiento">Secciones</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">Sobre</HeaderLink>
		</div>
		<a class="site-cta" href="/#finisher">Empezar</a>
	</nav>
</header>
<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 10;
		padding: 0.4rem 1.5rem;
		background: rgba(8, 12, 20, 0.88);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(148, 163, 184, 0.2);
	}

	.site-nav {
		display: grid;
		grid-template-columns: minmax(0, 1.3fr) minmax(0, 2fr) minmax(0, 0.7fr);
		align-items: center;
		gap: 1rem;
		max-width: 1100px;
		margin: 0 auto;
	}

	.site-brand {
		display: grid;
		gap: 0.15rem;
	}

	.site-title {
		font-weight: 700;
		color: #f8fafc;
		text-decoration: none;
		font-size: 1.1rem;
	}

	.site-tagline {
		font-size: 0.8rem;
		color: rgba(226, 232, 240, 0.7);
		letter-spacing: 0.04em;
		text-transform: uppercase;
	}

	.site-links {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.site-links a {
		color: rgba(226, 232, 240, 0.85);
		padding: 0.4rem 0.2rem;
		border-bottom: 2px solid transparent;
		text-decoration: none;
		font-size: 0.95rem;
	}

	.site-links a.active {
		border-bottom-color: #facc15;
		color: #f8fafc;
	}

	.site-cta {
		justify-self: end;
		background: #facc15;
		color: #0b0e14;
		padding: 0.55rem 1.1rem;
		border-radius: 999px;
		text-decoration: none;
		font-weight: 600;
	}

	@media (max-width: 720px) {
		.site-nav {
			grid-template-columns: 1fr;
			justify-items: start;
		}

		.site-links {
			justify-content: flex-start;
			gap: 0.75rem;
		}

		.site-cta {
			justify-self: start;
		}
	}
</style>
