---
const { id, title, description, count } = Astro.props;
---

<section
	id={id}
	data-section-id={id}
	data-section-total={count}
	class="scroll-mt-28 flex flex-col gap-6"
>
	<header class="flex flex-col gap-2">
		<div class="flex flex-wrap items-baseline gap-3">
			<h2 class="font-display text-2xl md:text-3xl text-slate-100">{title}</h2>
			{count && (
				<span class="text-[0.7rem] uppercase tracking-[0.3em] text-slate-400" data-section-count>
					{count} ejercicios
				</span>
			)}
			<span class="text-sm text-slate-300" data-section-progress></span>
		</div>
		<div class="h-1.5 w-full overflow-hidden rounded-full bg-slate-900/70">
			<div class="h-full w-0 bg-gradient-to-r from-amber-300 to-emerald-400" data-section-progress-bar></div>
		</div>
		{description && <p class="max-w-3xl text-slate-300">{description}</p>}
	</header>
	<div class="grid gap-6 md:grid-cols-2" data-section-list>
		<slot />
	</div>
</section>
